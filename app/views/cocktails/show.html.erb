<div class="container">

  <br>

  <h1><%= @cocktail.name %></h1>

  <p>
   <strong>Ingredients:</strong>
   <ul>
     <% @cocktail.doses.each do |dose| %>
     <li><%= dose.description %> of <%= dose.ingredient.name %></li>
     <li><%= link_to "Destroy dose", dose_path(dose), method: :delete %></li>
     <% end %>
   </ul>
 </p>

 <% if @cocktail.photo? %>
 <%= cl_image_tag @cocktail.photo.path, width: 300, height: 100, crop: :fill %>

<% end %>



<br>
<%= "______________________" %>

<br> <br>

<%= link_to "Edit the cocktail", edit_cocktail_path(@cocktail) %>
<br>
<%= link_to "Destroy the cocktail", cocktail_path(@cocktail), method: :delete %>
<br>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
<br>
<br>
<%= link_to "Home", root_path, class: "btn btn-primary" %>
</div>
